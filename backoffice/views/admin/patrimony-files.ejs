<%- include('header') -%>
<div class="col-md-6">
    <h4 class="lead">Fotos <%= patrimony.name %></h4>
</div>
<div id="demo" class="carousel slide text-center row justify-content-center align-self-center" data-ride="carousel"
     data-interval="2000" data-pause="hover">

    <ul class="carousel-indicators">
        <% let count = 0 %>
        <% for (let i = 0; i < patrimony.files.length; i++) { %>
            <% if (patrimony.files[i].mimetype.startsWith("image")) { %>
                <li data-target="#demo" data-slide-to="<%= count %>" <% if (count === 0) { %>class="active"
                        <% } %>
                ></li>
                <% count++ %>
            <% } %>
        <% } %>
    </ul>
    <div class="carousel-inner">
        <% count = 0 %>
        <% for (let i = 0; i < patrimony.files.length; i++) { %>
            <% if (patrimony.files[i].mimetype.startsWith("image")) { %>
                <div class="carousel-item <% if (count === 0) { %>active<% } %>">
                    <img class="img-fluid img-thumbnail rounded" src="/<%= patrimony.files[i].path %>" alt="">
                </div>
                <% count++ %>
            <% } %>
        <% } %>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<div class="col-md-6 mt-3">
    <h4 class="lead">VÃ­deos <%= patrimony.name %></h4>
</div>
<div class="row justify-content-center align-self-center">
    <% for (let i = 0; i < patrimony.files.length; i++) { %>
        <% if (patrimony.files[i].mimetype.startsWith("video")) { %>
            <div class="row">
                <div class="col">
                    <video class="img-fluid img-thumbnail rounded" controls>
                        <source src="/<%= patrimony.files[i].path %>" type="<%- patrimony.files[i].mimetype %>">
                    </video>
                </div>
            </div>
        <% } %>
    <% } %>
</div>

<%- include('footer') -%>

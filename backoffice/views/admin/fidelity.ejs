                <ul style="list-style-type: none; text-align: center">
                    <li>
                        <input
                                style="text-align: center"
                                type="number"
                                step="any"
                                id="percentagem-desconto"
                                placeholder="Desconto Aquisições"
                                name="acquisitions"
                                value="<%= fidelity.acquisitions %>"
                                min="0"
                                required
                        />
                    </li>
                </ul>
            </td>
        </tr>

<%- include('header') -%>
<form method="post">
    <table class="table">
        <thead>
        <tr>
            <th colspan="3" style="text-align: center;">Percentagem Descontos Aplicados</th>    
        </tr>
        <tr>
            <th scope="col"></th>
            <th scope="col">Categoria</th>
            <th scope="col" style="text-align: center">Percentagem</th>
        </tr>
         
        </thead>
        <tbody>
        <tr>
            <td style="vertical-align: middle"><i class=""></i></td>
